{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".indexOn": ["timestamp"],
      "$uid": {
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChildren(['uid', 'timestamp', 'color', 'role', 'mode', 'nickname'])",
        "uid": {
          ".validate": "newData.val() === $uid"
        },
        "timestamp": {
          ".validate": "newData.val() === now"
        },
        "nickname": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 20"
        },
        "color": {
          ".validate": "newData.val() === 'blue' || newData.val() === 'red' || newData.val() === 'green' || newData.val() === 'yellow' || newData.val() === 'purple' || newData.val() === 'orange'"
        },
        "role": {
          ".validate": "newData.val() === 'freelance' || newData.val() === 'student' || newData.val() === 'designer' || newData.val() === 'engineer' || newData.val() === 'writer'"
        },
        "mode": {
          ".validate": "newData.val() === 'work' || newData.val() === 'break' || newData.val() === 'meeting'"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "history": {
      ".read": "auth != null",
      ".indexOn": ["date", "checkinAt"],
      ".write": "auth != null",
      "$pushId": {
        ".validate": "newData.hasChildren(['uid', 'nickname', 'color', 'role', 'checkinAt', 'date'])",
        "uid": {
          ".validate": "newData.isString()"
        },
        "nickname": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 20"
        },
        "color": {
          ".validate": "newData.val() === 'blue' || newData.val() === 'red' || newData.val() === 'green' || newData.val() === 'yellow' || newData.val() === 'purple' || newData.val() === 'orange'"
        },
        "role": {
          ".validate": "newData.val() === 'freelance' || newData.val() === 'student' || newData.val() === 'designer' || newData.val() === 'engineer' || newData.val() === 'writer'"
        },
        "checkinAt": {
          ".validate": "newData.val() === now"
        },
        "date": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "events": {
      ".read": "auth != null",
      ".indexOn": ["date", "active"],
      ".write": "auth != null",
      "$eventId": {
        ".validate": "newData.hasChildren(['title', 'date', 'active', 'createdAt', 'updatedAt'])",
        "title": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 100"
        },
        "date": {
          ".validate": "newData.isString()"
        },
        "time": {
          ".validate": "newData.isString() && newData.val().length <= 20"
        },
        "description": {
          ".validate": "newData.isString() && newData.val().length <= 500"
        },
        "imageUrl": {
          ".validate": "newData.isString() && newData.val().length <= 1000"
        },
        "active": {
          ".validate": "newData.isBoolean()"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "updatedAt": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "books": {
      ".read": "auth != null",
      ".indexOn": ["order", "active"],
      ".write": "auth != null",
      "$bookId": {
        ".validate": "newData.hasChildren(['title', 'active', 'createdAt', 'updatedAt'])",
        "title": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 100"
        },
        "author": {
          ".validate": "newData.isString() && newData.val().length <= 50"
        },
        "genre": {
          ".validate": "newData.isString() && newData.val().length <= 30"
        },
        "comment": {
          ".validate": "newData.isString() && newData.val().length <= 500"
        },
        "imageUrl": {
          ".validate": "newData.isString() && newData.val().length <= 1000"
        },
        "order": {
          ".validate": "newData.isNumber()"
        },
        "active": {
          ".validate": "newData.isBoolean()"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "updatedAt": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "profiles": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChildren(['nickname', 'color', 'role', 'linkedAt'])",
        "nickname": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 20"
        },
        "color": {
          ".validate": "newData.val() === 'blue' || newData.val() === 'red' || newData.val() === 'green' || newData.val() === 'yellow' || newData.val() === 'purple' || newData.val() === 'orange'"
        },
        "role": {
          ".validate": "newData.val() === 'freelance' || newData.val() === 'student' || newData.val() === 'designer' || newData.val() === 'engineer' || newData.val() === 'writer'"
        },
        "linkedAt": {
          ".validate": "newData.val() === now"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "comments": {
      ".read": "auth != null",
      ".indexOn": ["createdAt"],
      ".write": "auth != null && auth.token.firebase.sign_in_provider !== 'anonymous'",
      "$commentId": {
        ".validate": "newData.hasChildren(['uid', 'nickname', 'text', 'createdAt'])",
        "uid": {
          ".validate": "newData.isString() && newData.val() === auth.uid"
        },
        "nickname": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 20"
        },
        "text": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 50"
        },
        "color": {
          ".validate": "newData.isString() && newData.val().length <= 10"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "event_participants": {
      ".read": "auth != null",
      "$eventId": {
        "$uid": {
          ".write": "auth != null && auth.uid === $uid",
          ".validate": "newData.hasChildren(['joinedAt', 'nickname'])",
          "joinedAt": {
            ".validate": "newData.isNumber()"
          },
          "nickname": {
            ".validate": "newData.isString() && newData.val().length <= 20"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },
    "surveys": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$surveyId": {
        ".validate": "newData.hasChildren(['uid', 'q1_source', 'q2_purpose', 'q3_frequency', 'createdAt'])",
        "uid": {
          ".validate": "newData.isString()"
        },
        "q1_source": {
          ".validate": "newData.isString() && newData.val().length <= 50"
        },
        "q2_purpose": {
          ".validate": "newData.isString() && newData.val().length <= 50"
        },
        "q3_frequency": {
          ".validate": "newData.isString() && newData.val().length <= 50"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    ".read": false,
    ".write": false
  }
}
